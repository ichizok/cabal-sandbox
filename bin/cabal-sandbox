#!/usr/bin/env bash

declare -x SANDBOX_LOCAL
declare -x SANDBOX_HOME="${SANDBOX_HOME:-$HOME/.cabal-sandbox}"
declare -r LAUNCHER="${LAUNCHER:-cabal-sandbox}"
declare -r COMMAND="$(basename $0)"

usage() {
    cat <<EOT
Usage: $COMMAND [--sandbox dir] register
   or: $COMMAND [--sandbox dir] -- command [...]
EOT
}

check_path() {
    local sandbox="$1"
    [[ -d "$sandbox" ]] && [[ $sandbox != $SANDBOX_HOME* ]]
}

detect_sandbox() {
    local sub="${1:+/$1}"
    local sandbox
    if [[ "$SANDBOX_LOCAL" ]]; then
        sandbox="$SANDBOX_LOCAL$sub"
        if check_path "$sandbox"; then
            echo "$sandbox"
        fi
        return
    fi
    local cwd="${2:-$PWD}" tmp
    while true; do
        sandbox="$cwd/.cabal-sandbox$sub"
        if check_path "$sandbox"; then
            echo "$sandbox"
            return
        fi
        tmp=`dirname $cwd`
        if [[ $tmp = $cwd ]]; then
            break
        fi
        cwd=$tmp
    done
}

register() {
    local -r sandbox="`detect_sandbox bin`"
    if [[ ! "$sandbox" ]]; then
        echo "Could not detect .cabal-sandbox directory or executables." >&2
        return 1
    fi
    mkdir -p "$SANDBOX_HOME/bin"
    local dest
    for dest in "$sandbox"/*; do
        dest="$SANDBOX_HOME/bin/`basename $dest`"
        [[ -f "$dest" ]] || ln -s "$LAUNCHER" "$dest"
    done
    return 0
}

execute() {
    local -r sandbox="`detect_sandbox bin`"
    local -r exename="$1"
    local -r exepath="$sandbox/$exename"
    if [[ ! "$sandbox" ]] || [[ ! -x "$exepath" ]]; then
        echo "cabal-sandbox: command not found: $exename" >&2
        return
    fi
    shift
    exec "$exepath" "$@"
}

if [[ $COMMAND = $LAUNCHER ]]; then
    declare -a args=("" "$@")
    declare -i i=1
    while [[ $i -le $# ]]; do
        case "${args[$i]}" in
            --sandbox)
                SANDBOX_LOCAL="$(cd ${args[$i+1]} 2>/dev/null && pwd)"
                i=$i+1
                ;;
            --)
                shift $i
                execute "$@"
                exit 1
                ;;
            register)
                SANDBOX_LOCAL="${SANDBOX_LOCAL:-$PWD}"
                register
                exit $?
                ;;
            *)
                usage
                exit 1
                ;;
        esac
        i=$i+1
    done
else
    execute "$COMMAND" "$@"
fi
